# Elasticsearch and Kibana authentication credentials
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme

# Version of the Elastic Stack
STACK_VERSION=8.17.1

# Name of the Elasticsearch cluster
CLUSTER_NAME=docker-cluster

# License type for Elastic Stack
LICENSE=basic

# Port configurations for services
ES_PORT=9200                # Elasticsearch HTTP port
KIBANA_PORT=5601            # Kibana web interface
FASTIFY_PORT=4321           # API server port
PROMETHEUS_PORT=9090        # Prometheus monitoring
ES_EXPORTER_PORT=9114       # Elasticsearch metrics exporter
CADVISOR_PORT=8080          # Container monitoring
GRAFANA_PORT=3000           # Metrics visualization dashboard
ALERTMANAGER_PORT=9093      # Prometheus alerting
NGINX_PORT=443              # Web server HTTPS port
NGINX_EXPORTER_PORT=9113    # NGINX metrics exporter

# Memory limits for services (1GB each)
ES_MEM_LIMIT=1073741824     # Elasticsearch
KB_MEM_LIMIT=1073741824     # Kibana
LS_MEM_LIMIT=1073741824     # Logstash

# Security key for data encryption
ENCRYPTION_KEY=INSERT_ENCRYPTION_KEY

# Grafana dashboard login credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=adminpassword

# API authentication credentials
API_USERNAME=admin
API_PASSWORD=adminpassword
API_BASE_URL=https://localhost/api

# Webhook for Discord notifications
DISCORD_WEBHOOK_URL=INSERT_WEBHOOK_URL

# Salt for password hashing
SALT=INSERT_SALT
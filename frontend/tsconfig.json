{
	"compilerOptions": {
		"lib": ["es2020", "dom"],
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"baseUrl": "./",
		"outDir": "./.build",
		"rootDir": "./",
		"strict": true,
		"skipLibCheck": true,  // Désactive la vérification des fichiers de déclaration (.d.ts)
		// "composite": true    // Décommentez cette ligne
	},
	"include": ["ts/*.ts", "pong/*.ts"],
	"exclude": ["node_modules"],
}